<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="option_colorPicker" name="option_colorPicker" inherit_id="website.assets_frontend" active="False">
    <xpath expr="." position="inside"></xpath>
  </template>

  <template id="theme_customize" inherit_id="website.theme_customize" name="theme_alan modal">
    <xpath expr="//div" position="replace">
    <div>
        <!-- Layout Options -->
        <content id="theme_customize_content_layout" string="Layout" title="Choose layout">
            <!-- In a <more/> so that it is on a new line if themes add options before -->
            <more data-depends="">
                <list string="Body">
                    <opt string="Full" data-xmlid="theme_alan.option_layout_fullwidth" data-reload="/" />
                    <opt id="option_layout_boxed" string="Boxed" data-xmlid="theme_alan.option_layout_boxed" data-reload="/" />
                </list>
            </more>
        </content>

        <content id="theme_customize_content_colors" string="Colors" title="Choose theme color">
            <opt data-xmlid="" data-color-palette="user" string="Choose your colors" id="custom_color_palate" data-reload="/"/>
        </content>

        <content id="theme_customize_content_header" string="Header" title="Choose header">
            <!-- In a <more/> so that it is on a new line if themes add options before -->
            <more data-depends="">
                <list string="Header" id="customheader">                    
                    <opt id="option_header_layout_1" string="Header option 1" data-xmlid="alan_customize.header_layout_1" data-reload="/"/>
                    <opt id="option_header_layout_2" string="Header option 2" data-xmlid="alan_customize.header_layout_2" data-reload="/"/>
                    <opt id="option_header_layout_3" string="Header option 3" data-xmlid="alan_customize.header_layout_3" data-reload="/"/>
                    <opt id="option_header_layout_4" string="Header option 4" data-xmlid="alan_customize.header_layout_4" data-reload="/"/>
                    <opt id="option_header_layout_5" string="Header option 5" data-xmlid="alan_customize.header_layout_5" data-reload="/"/>
                </list>
            </more>
        </content>

        <content id="theme_customize_content_footer" string="Footer" title="Choose footer">
            <!-- In a <more/> so that it is on a new line if themes add options before -->
            <more data-depends="">
                <list string="Footer" id="customfooter">                    
                    <opt id="option_footer_layout_1" string="Footer option 1" data-xmlid="alan_customize.footer_layout_1" data-reload="/"/>
                    <opt id="option_footer_layout_2" string="Footer option 2" data-xmlid="alan_customize.footer_layout_2" data-reload="/"/>
                    <opt id="option_footer_layout_3" string="Footer option 3" data-xmlid="alan_customize.footer_layout_3" data-reload="/"/>
                    <opt id="option_footer_layout_4" string="Footer option 4" data-xmlid="alan_customize.footer_layout_4" data-reload="/"/>
                </list>
            </more>
        </content>

        <content id="theme_customize_shop_layout" string="Shop" title="Shop layout">
          <more data-depends="">
            <list string="Shop" id="customshop">
              <opt id="options_shop_full_width" string="Shop full width" data-xmlid="theme_alan.options_shop_full_width" data-reload="/" />
              <opt id="options_shop_reset" string="Shop reset" data-xmlid="theme_alan.options_shop_reset" data-reload="/" />
            </list>
          </more>
        </content>

        <content id="theme_customize_font_options" string="Fonts" title="Fonts option">
          <more data-depends="">
            <list string="Fonts" id="customfonts">
              <opt id="options_font_work_sans" string="Work sans" data-xmlid="theme_alan.options_font_work_sans" data-reload="/" />
              <opt id="options_font_hind" string="Hind" data-xmlid="theme_alan.options_font_hind" data-reload="/" />
              <opt id="options_font_nunito" string="Nunito" data-xmlid="theme_alan.options_font_nunito" data-reload="/" />
              <opt id="options_font_lato" string="Lato" data-xmlid="theme_alan.options_font_lato" data-reload="/" />
              <opt id="options_font_quicksand" string="Quicksand" data-xmlid="theme_alan.options_font_quicksand" data-reload="/" />
              <opt id="options_font_muli" string="Muli" data-xmlid="theme_alan.options_font_muli" data-reload="/" />
            </list>
          </more>
        </content>

        <content id="theme_customize_product_options" string="Product View" title="Product multi-image options">
          <more data-depends="">
            <list string="" id="customproduct">
              <opt id="options_vertical_slider" string="Vertical slider" data-xmlid="theme_alan.options_vertical_slider" data-reload="/" />
              <opt id="options_horizontal_slider" string="Horizontal slider" data-xmlid="theme_alan.options_horizontal_slider" data-reload="/" />
            </list>
          </more>
        </content>


        <content id="theme_customize_bg_options" string="Bg Options" title="Bg options">
          <more data-depends="">
            <list string="" id="custombg">
              <opt id="options_bg_01" string="BG image 1" data-xmlid="theme_alan.options_bg_01" data-reload="/" />
              <opt id="options_bg_02" string="BG image 2" data-xmlid="theme_alan.options_bg_02" data-reload="/" />
              <opt id="options_bg_03" string="BG image 3" data-xmlid="theme_alan.options_bg_03" data-reload="/" />
              <opt id="options_bg_04" string="BG image 4" data-xmlid="theme_alan.options_bg_04" data-reload="/" />
              <opt id="options_bg_05" string="BG image 5" data-xmlid="theme_alan.options_bg_05" data-reload="/" />
              <opt id="options_bg_06" string="BG color 1" data-xmlid="theme_alan.options_bg_06" data-reload="/" />
              <opt id="options_bg_07" string="BG color 2" data-xmlid="theme_alan.options_bg_07" data-reload="/" />
              <opt id="options_bg_08" string="BG color 3" data-xmlid="theme_alan.options_bg_08" data-reload="/" />
              <opt id="options_bg_09" string="BG color 4" data-xmlid="theme_alan.options_bg_09" data-reload="/" />
              <opt id="options_bg_10" string="BG color 5" data-xmlid="theme_alan.options_bg_10" data-reload="/" />
              <opt id="options_bg_reset" string="BG reset" data-xmlid="theme_alan.options_bg_reset" data-reload="/" />
            </list>
          </more>
        </content>

    </div>
    </xpath>
  </template>
